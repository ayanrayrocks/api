<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
           <PatternLayout pattern="%{HH:mm:ss.SSS} [%t] %-5level{36} - %msg%n"></PatternLayout>
        </Console>
        <File name="File" fileName="logs/test.log">
           <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level{36} - %msg%n"></PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>